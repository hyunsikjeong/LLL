# EditorConfig is awesome: https://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# 4 space indentation
[**.{sage,py}]
max_line_length = 119
indent_style = space
indent_size = 4
